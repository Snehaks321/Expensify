<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center"
        android:text="Dashboard"
        android:textColor="#070D12"
        android:textSize="34sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/addexpense"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginTop="50dp"
        android:background="#4CACB8"
        android:text="Add Your Expense"
        android:textColor="#04090C"
        android:textColorHighlight="#503030"
        android:textColorLink="#53F1D2"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="10sp"
        android:background="#4CACB8"
        android:text="Category"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="10sp"
        android:background="#4CACB8"
        android:text="Calendar"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/expenserep"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="10sp"
        android:background="#4CACB8"
        android:text="Expense report"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:background="#4CACB8"
        android:text="logout"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>